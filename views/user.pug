//- user show
html
 include includes/head.pug
 table
   tr
     td
        <img src=#{user[0].profile_image_url} width=60 height=60>
     td
       - var tm = new Date(user[0].created_at).toLocaleString("ja-JP")
       p #{user[0].screen_name} #{user[0].name} <br>
       |location:#{user[0].location}<br>
       |start at:#{tm}<br>
       |コメント:#{user[0].description}<br>
       |following:#{user[0].following}
       |tweets  :#{user[0].statuses_count}
       |follow  :#{user[0].friends_count}
       |follower:#{user[0].followers_count}
       - var sc = user[0].screen_name
       |listed  :<a href=#{myhttp+"/listed?nm="+sc}>#{user[0].listed_count}</a>
 p list length = #{list.length}
 table
   thead
     tr
       td no
       td screen_name
       td name
       td create_at
       td menber
   tbody
    - for (var i=0;i<list.length;i++) {
        tr
          td #{i}
          td #{list[i].user.screen_name}
          td #{list[i].name}
          - var tm = new Date(list[0].created_at).toLocaleString()
          td #{tm}
          td #{list[i].member_count}
    - }