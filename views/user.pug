html
 table
   tr
     td
        <img src=#{user[0].profile_image_url} width=60 height=60>
     td
       - var tm = new Date(user[0].created_at).toLocaleString("ja-JP")
       p #{user[0].screen_name} #{user[0].name} <br>
       |location:#{user[0].location}<br>
       |start at:#{tm}<br>
       |        :#{user[0].description}<br>
       |tweets  :#{user[0].statuses_count}<br>
       |follow  :#{user[0].friends_count}<br>
       |follower:#{user[0].followers_count}<br>
       |listed  :#{user[0].listed_count}